<script>
/*
CONFIG - edit these values
- GARAGE_NAME: visible site title and footer
- LOGO: path to logo image (relative)
- PRIMARY_COLOR: hex color for theme
- FORM_SRC: Google Form embed URL (must include embedded=true)
*/
const CONFIG = {
GARAGE_NAME: "GARASJENAVN",
LOGO: "logo.png",
PRIMARY_COLOR: "#1f6feb",
FORM_SRC: "https://docs.google.com/forms/d/e/YOUR_FORM_ID/viewform?embedded=true"
};


// Apply config
document.getElementById('garage-name').textContent = CONFIG.GARAGE_NAME;
document.getElementById('logo-img').src = CONFIG.LOGO;
document.getElementById('form-frame').src = CONFIG.FORM_SRC;
document.getElementById('contact-signature').textContent = CONFIG.GARAGE_NAME;
document.getElementById('year').textContent = new Date().getFullYear();
document.documentElement.style.setProperty('--primary', CONFIG.PRIMARY_COLOR);


// Smooth scroll for CTA link
document.querySelector('.cta').addEventListener('click', e => {
e.preventDefault();
document.getElementById('form-frame').scrollIntoView({behavior:'smooth'});
});
</script>
